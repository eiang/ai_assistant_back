# AI助手后端配置示例文件
# 复制此文件为 .env.development 或 .env.production 并填写相应配置

# 环境标识
ENV=development  # development 或 production

# 基础URL配置
API_BASE_URL=http://localhost:8000/api

# 数据库配置
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/ai_assistant

# JWT认证配置
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7天

# 微信小程序配置
WECHAT_APPID=your-wechat-appid
WECHAT_SECRET=your-wechat-secret

# AI服务配置
AI_API_KEY=your-ai-api-key
AI_API_URL=https://api.openai.com/v1/chat/completions

# 语音识别服务配置
SPEECH_API_KEY=your-speech-api-key
SPEECH_API_URL=https://your-speech-api-url

# 文件上传配置
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# 应用配置
DEBUG=True  # True 或 False
HOST=0.0.0.0
PORT=8000

# 跨域配置
ALLOW_ORIGINS=*  # 多个域名用逗号分隔，如：http://localhost:3000,https://example.com
ALLOW_CREDENTIALS=True
ALLOW_METHODS=*
ALLOW_HEADERS=* 